{{!-- ./views/auth/signup.hbs --}}

<div id="form">
  <h2>Signup</h2>
  <form action="/auth/signup" method="POST">
    <label>Tu nombre de usuario</label>
    <input type="text" name="username" placeholder="ironhacker" />
    
    <label>Email</label>
    <input type="email" name="email" placeholder="rockstar@ironhack.com" /> 
    {{!-- aqu√≠ el cliente detiene cualquier error, con el type=email; si tienes otro tipo de type entonces toda la  responsabilidad llega del lado del servidor --}}
    
    <label>Password</label>
	<input type="password" name="password" placeholder="********" />

    <button type="submit">Crear cuenta</button>

  </form>

  {{#if errorMessage}}
  <p class="error">{{errorMessage}}</p>
  {{/if}}
</div>